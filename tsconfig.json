{
  "compilerOptions": {
    "baseUrl": "./",
    "rootDirs": ["src/**/*"],
    "target": "esnext",
    "module": "ESNext",
    "sourceMap": true,
    "allowJs": true,
    "importHelpers": true,
    "outDir": "dist",
    "strict": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "dom",
      "es6",
      "esnext"
    ],
    "paths": {
      "@/*": ["src/*"],
      "@core/*": ["src/core/*"]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": []
}
